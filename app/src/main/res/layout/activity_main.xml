<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/eiffel"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgFood"
        android:contentDescription="@string/eiffel_tower" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_paris"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgFood"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="40sp"
        android:id="@+id/foodTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_paris"
        app:layout_constraintTop_toBottomOf="@id/foodTitle"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/goBtn"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_home"
        app:layout_constraintTop_toBottomOf="@id/goBtn"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/homeBtn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>